@using System
@using AIP.GUI
<table width="100%" frame="border" align="center">
    <colgroup>
        <col width="4%" />
        <col width="48%" />
        <col width="48%" />
    </colgroup>
    <tbody>
        <tr>
            <th align="left" class="bleft btop bright bbottom" width="10">1</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD215_1"))</th>
            <td class="bleft btop bright bbottom">
            @Raw(Model.Location)
            @foreach (var data in Model.Characteristics)
            {
                <text>@Raw(data["Type"]),
                    @Raw(data["Colour"]),
                    @Raw(data["Flashing"])
                </text>
            }
        </td>
    </tr>
    <tr>
        <th align="left" class="bleft btop bright bbottom">2</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD215_2"))</th>
        <td class="bleft btop bright bbottom">@Raw(Model.LDILocation)<br />@Raw(Model.WDILocation)</td>
    </tr>
    <tr>
        <th align="left" class="bleft btop bright bbottom">3</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD215_3"))</th>
        <td class="bleft btop bright bbottom">@Raw(Model.TWYEdgeCl)</td>
    </tr>
    <tr>
        <th align="left" class="bleft btop bright bbottom">4</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD215_4"))</th>
        <td class="bleft btop bright bbottom">@Raw(Model.SecondaryPowerSupply)</td>
    </tr>
    <tr>
        <th align="left" class="bleft btop bright bbottom">5</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD215_5"))</th>
        <td class="bleft btop bright bbottom">@Raw(Model.Remarks)</td>
    </tr>
</tbody>
</table>