@using System
@using AIP.GUI
<table width="100%" frame="border" align="center">
    <colgroup>
        <col width="4%" />
        <col width="48%" />
        <col width="48%" />
    </colgroup>
    <tbody>
        <tr>
            <th align="left" class="bleft btop bright bbottom">1</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_1"))</th>
            <td class="bleft btop bright bbottom">@if (Model.ARP != "")
            {<p class="Cell-body">@Raw(Model.ARP)</p>}@if (Model.ADsite != "")
            {<p class="Cell-body">@Raw(Model.ADsite)</p>}</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">2</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_2"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Direction)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">3</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_3"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Elevation) @Raw(Model.RefTemperature)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">4</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_4"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Geoid)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">5</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_5"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.MagneticVariation) (@Raw(Model.DateMagneticVariation)) / @Raw(Model.MagneticVariationChange)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">6</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_6"))</th>
            <td class="bleft btop bright bbottom">
                @if (!String.IsNullOrEmpty(Model.NameOfAdministration_linkage))
                {<p class="Cell-body">@Raw(Model.NameOfAdministration_linkage)</p>}
                <div class="Address Address-part-Post">
                    @if (!String.IsNullOrEmpty(Model.NameOfAdministration_linkage))
                    {<div class="Address-part ">Post: <p class="Address-post">@Raw(Model.NameOfAdministration_linkage)</p></div>}
                    @if (!String.IsNullOrEmpty(Model.NameOfAdministration_fax))
                    {<p class="Address-part Address-part-Phone"> Tel: @Raw(Model.NameOfAdministration_fax)</p>}
                    @if (!String.IsNullOrEmpty(Model.NameOfAdministration_email))
                    {<p class="Address-part Address-part-Email">Email: <a href="mailto:@Model.NameOfAdministration_email">@Raw(Model.NameOfAdministration_email)</a></p>}
                </div>
            </td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">7</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_7"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.TypeTraffic)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">8</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD22_8"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Remark)</td>
        </tr>
    </tbody>
</table>