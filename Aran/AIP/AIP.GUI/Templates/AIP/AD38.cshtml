@using System
@using AIP.GUI
<table width="100%" frame="border" align="center">
    <colgroup>
        <col width="4%" />
        <col width="48%" />
        <col width="48%" />
    </colgroup>
    <tbody>
        <tr>
            <th align="left" class="bleft btop bright bbottom" width="10">1</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_1"))</th>
            <td class="bleft btop bright bbottom">
                @foreach (var data in Model.ApronData)
                {
                    <text>@Raw(data["Name"])<br />
                    @Raw(@Tpl.Text("AD38_SURFACE")): @Raw(data["Composition"])
                    @if(@data["AircraftComposition"] != "")
                    {<text>, @Raw(data["AircraftComposition"])</text> }
                    @Raw(@Tpl.Text("AD38_STRENGTH")): @Raw(data["SurfaceProperties"])
                    </text>
                }
            </td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">2</th>
	  <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_2"))</th>
            <td class="bleft btop bright bbottom">
                @foreach (var data in Model.TaxiwayData)
                {
                    <text>@Raw(data["Name"])<br />
                    @Raw(@Tpl.Text("AD38_WIDTH")): @Raw(data["Width"])
                    @Raw(@Tpl.Text("AD38_SURFACE")): @Raw(data["Composition"])
                    @Raw(@Tpl.Text("AD38_STRENGTH")): @Raw(data["SurfaceProperties"])
                    </text>
                }
            </td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">3</th>
	  <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_3"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Altimeter)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">4</th>
	  <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_4"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Altimeter)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">5</th>
	  <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_5"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.VORCheckpoints)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">6</th>
	  <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD38_6"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.INSCheckpoints)</td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">7</th>
      <th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD387"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Remarks)</td>
        </tr>
    </tbody>
</table>