@using System
@using AIP.GUI

<table width="100%" frame="border" align="center">
    <colgroup>
        <col width="4%" />
        <col width="48%" />
        <col width="48%" />
    </colgroup>
    <tbody>
        <tr>
            <th align="left" class="bleft btop bright bbottom" width="10">1</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD39_1"))</th>
            <td class="bleft btop bright bbottom">
                @foreach (var data in Model.UseAircraft)
                {
                    <text>@Raw(data["Name"])<br />
                        @Raw(@data["MarkingICAOStandard"]), @Raw(@data["Condition"]), @Raw(@data["Remarks"])
                    </text>
                }
            </td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">2</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD39_2"))</th>
            <td class="bleft btop bright bbottom">
                @foreach (var data in Model.RunwayMarking)
                {
                    <text>@Raw(data["Name"])<br />
                        @Raw(@data["MarkingICAOStandard"]), @Raw(data["Condition"]), @Raw(data["Remarks"])
                    </text>
                }
                @foreach (var data in Model.TaxiwayMarking)
                {
                    <text>@Raw(data["Name"])<br />
                        @Raw(@data["MarkingICAOStandard"]), @Raw(data["Condition"]), @Raw(data["Remarks"])
                    </text>
                }
            </td>
        </tr>
        <tr>
            <th align="left" class="bleft btop bright bbottom">3</th>
		<th align="left" class="bleft btop bright bbottom">@Raw(@Tpl.Text("AD39_3"))</th>
            <td class="bleft btop bright bbottom">@Raw(Model.Remarks)</td>
        </tr>
    </tbody>
</table>