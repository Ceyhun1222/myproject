@using System
@using AIP.GUI
@if (Model != null) {
<text><?xml version="1.0" encoding="UTF-8" ?></text>
<!DOCTYPE e:eAIP PUBLIC "-//EUROCONTROL//eAIP DTD 2.0//EN" "../../../eAIP-pack/dtd/eAIP.dtd" [
@foreach (var section in Model.Sections) {
<!ENTITY eAIP-@(section) SYSTEM "@(Model.Country)-@(section)-@(Model.Lang).xml">
}
@foreach (string section in Model.AirportList) {
<!ENTITY eAIP-AD-@(section) SYSTEM "@(Model.Country)-AD-@(section)-@(Model.Lang).xml">
}
@foreach (string section in Model.HeliportList) {
<!ENTITY eAIP-AD-@(section) SYSTEM "@(Model.Country)-AD-@(section)-@(Model.Lang).xml">
}
]>
<?xml-stylesheet href="../xslt/html-content.xslt" type="text/xsl" ?>
<?eAIP-locales ../locales.xml ?>
<e:eAIP Edition="@(Model.EffectiveDate)" Effective-date="@(Model.EffectiveDate)" ICAO-country-code="@(Model.Country)" Publication-date="@(Model.PublicationDate)" Publishing-organisation="@(Model.Company)" State="@(Model.Company)" Toc="No"
	Version="2.0" id="eAIP" xml:lang="@(Model.Lang)" xmlns:e="http://www.eurocontrol.int/xmlns/AIM/eAIP">
	<e:GEN Number="Part 1" Toc="No" id="GEN">
		<e:Title Updated="No">@Tpl.MenuText("GEN_")</e:Title>
