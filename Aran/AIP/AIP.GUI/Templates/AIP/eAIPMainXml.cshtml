		    <e:Title Updated="No" /> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("ENR-0"))) { @Raw("&eAIP-"+section+";") } </e:ENR-0>
		<e:ENR-1 Number="ENR 1" Toc="Yes" id="ENR-1">
			<e:Title Updated="No">@Tpl.MenuText("ENR1")</e:Title> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("ENR-1"))) { @Raw("&eAIP-"+section+";") } </e:ENR-1>
		<e:ENR-2 Number="ENR 2" Toc="Yes" id="ENR-2">
			<e:Title Updated="No">@Tpl.MenuText("ENR2")</e:Title> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("ENR-2"))) { @Raw("&eAIP-"+section+";") } </e:ENR-2>
