		<e:GEN-1 Number="GEN 1" Toc="Yes" id="GEN-1">
			<e:Title Updated="No">@Tpl.MenuText("GEN1")</e:Title>@foreach (var section in @Model.Sections.Where(x => x.StartsWith("GEN-1"))) { @Raw("&eAIP-"+section+";") } </e:GEN-1>
