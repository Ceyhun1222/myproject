			<e:Title Updated="No">@Tpl.MenuText("AD1")</e:Title> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("AD-1"))) { @Raw("&eAIP-"+section+";") } </e:AD-1>
		<e:AD-2 Number="AD 2" Toc="Yes" id="AD-2">
			<e:Title Updated="No">@Tpl.MenuText("AD2")</e:Title> @foreach (var section in @Model.AirportList) { @Raw("&eAIP-AD-"+section+";") }  </e:AD-2>
		<e:AD-3 Number="AD 3" Toc="Yes" id="AD-3">
