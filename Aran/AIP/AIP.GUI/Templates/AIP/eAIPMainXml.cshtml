			<e:Title Updated="No">@Tpl.MenuText("ENR4")</e:Title> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("ENR-4"))) { @Raw("&eAIP-"+section+";") } </e:ENR-4>
