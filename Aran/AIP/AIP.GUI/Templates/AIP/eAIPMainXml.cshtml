			<e:Title Updated="No">@Tpl.MenuText("GEN4")</e:Title> @foreach (var section in @Model.Sections.Where(x => x.StartsWith("GEN-4"))) { @Raw("&eAIP-"+section+";") } </e:GEN-4>
	</e:GEN>
	<e:ENR Number="Part 2" Toc="No" id="ENR">
		<e:Title Updated="No">@Tpl.MenuText("ENR_")</e:Title>
