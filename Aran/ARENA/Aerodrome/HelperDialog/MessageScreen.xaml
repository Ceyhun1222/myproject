<Window x:Class="HelperDialog.MessageScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelperDialog"
        mc:Ignorable="d"
        Title="Aerodrome" Background="WhiteSmoke" Name="MessageScrn" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="130" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" >
            <Image  Height="48" Width="48" Opacity="0.7" Source="pack://application:,,,/HelperDialog;component/48x48.png"  />
            <Label FontFamily="Tahoma" FontSize="14" VerticalAlignment="Center" Content="{Binding ElementName=MessageScrn,Path=MessageText}"/>
        </StackPanel>
        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" BorderBrush="Black" BorderThickness="5" Grid.Row="1"/>
        <Button Grid.Row="2" Height="28" Width="70" Margin="0,0,10,5" HorizontalAlignment="Right" Content="OK" IsCancel="True"/>
    </Grid>
</Window>
