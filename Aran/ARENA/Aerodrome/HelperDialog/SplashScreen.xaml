<Window x:Class="HelperDialog.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelperDialog"
        mc:Ignorable="d"
       Title="In progress, please wait..."  WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent" Width="512" ShowInTaskbar="False" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.RowSpan="3" Opacity="0.7" Source="pack://application:,,,/HelperDialog;component/512x512.png"  />
        <Label Height="28" FontFamily="Tahoma" FontSize="12" VerticalAlignment="Center" Name="label2" HorizontalAlignment="Center" 
               Content="{Binding Source={x:Static local:MessageListener.Instance},Path=Message}" Foreground="White"></Label>
    </Grid>
</Window>
