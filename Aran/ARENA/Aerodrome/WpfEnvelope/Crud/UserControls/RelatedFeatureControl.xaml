<UserControl x:Class="WpfEnvelope.Crud.UserControls.RelatedFeatureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEnvelope.Crud.UserControls"
             mc:Ignorable="d" Name="relatedFeatControl"
             >
    <StackPanel MinWidth="100">
        <ComboBox Height="30" Margin="0 0 0 3" Name="typesCombobox" VerticalContentAlignment="Center" ItemsSource="{Binding ElementName=relatedFeatControl,Path=FeatureTypes}" DisplayMemberPath="Name"/>
        <ComboBox Height="30" Name="featuresCombobox" VerticalContentAlignment="Center" SelectedItem="{Binding ElementName=relatedFeatControl, Path=SelectedFeature}"/>
    </StackPanel>
</UserControl>
