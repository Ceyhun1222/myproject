<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:WpfEnvelope.WpfShell.UI.Controls">

	<ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/WpfEnvelope;component/Resources/ShellResources.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type controls:SubMenuContent}" x:Key="{x:Type controls:SubMenuContent}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:SubMenuContent}">
					<StackPanel Background="{StaticResource MainMenuBrush}">
						<controls:SeparatorLine Height="2" />
						<StackPanel x:Name="PART_MenuItemPanel" Orientation="Horizontal" Margin="5" />
						<controls:SeparatorLine Height="2" />
					</StackPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>