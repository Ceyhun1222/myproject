<Window x:Class="ArenaErrorReport.MainWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArenaErrorReport"
             xmlns:viewModel="clr-namespace:ArenaErrorReport.ViewModel"
             xmlns:view="clr-namespace:ArenaErrorReport.View"
             mc:Ignorable="d" 
             Height="500" Width="1200">
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewModel:ErrorReportViewModel}">
            <view:ErrorReportView/>
        </DataTemplate>

    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding ViewModel}" />
    </Grid>
</Window>
