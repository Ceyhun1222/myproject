@model ChartManagerWeb.ChartServiceReference.ChartUser

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
<h3>Are you sure to delete @Html.ActionLink(@Model.FirstName + " " + Model.LastName, "Edit", new { id = Model.Id }) from your user list?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label col-md-2">First name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Last name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Privilege</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Privilege, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Position</label>
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Position, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Disabled</label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.Disabled, new { @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Administrator</label>
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.IsAdmin, new { @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-success" })
</div>