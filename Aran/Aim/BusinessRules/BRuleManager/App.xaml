<Application x:Class="BRuleManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:BRuleManager.View">
    
    <Application.Resources>
        <Style x:Key="r_button" TargetType="Button">
            <Setter Property="Padding" Value="8, 4" />
        </Style>

        <DataTemplate x:Key="model_Rules">
            <view:RulesView />
        </DataTemplate>

        <DataTemplate x:Key="model_RuleEdit">
            <view:RuleEditView />
        </DataTemplate>

        <DataTemplate x:Key="model_PropertySelector">
            <view:PropertySelectorView />
        </DataTemplate>

        <DataTemplate x:Key="model_CheckReport">
            <view:CheckReportView />
        </DataTemplate>

        <DataTemplate x:Key="model_About">
            <view:AboutView />
        </DataTemplate>

    </Application.Resources>
</Application>
