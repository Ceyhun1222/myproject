<Window x:Class="Aran.Delta.View.SaveAirspace"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaveAirspace" Height="300" Width="300">
    <Grid Margin="10 10 5 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="2 10">
            <TextBlock Text="Name :"  Margin="5 10" />
            <TextBlock Text="Lower Limit :" Margin="5 10"/>
            <TextBlock Text="Upper Limit :" Margin="5 10"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="8 10" Grid.Column="1">
            <TextBox Width="160"  Name="TxtName" Margin="5 10"/>
            <TextBox Width="160"   Margin="5 10"/>
            <TextBox Width="160"  Margin="5 10"/>
        </StackPanel>
        <Button Grid.ColumnSpan="2" Grid.Row="1" Height="23" HorizontalAlignment="Right"  Content="Save" Width="80"  Margin="8 10 8 2"/>
    </Grid>
</Window>
