<Window x:Class="Aran.Delta.View.Save.SaveDesigninPoint"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save To Database" 
        Width="220"
        Height="160"
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="ToolWindow" IsManipulationEnabled="False"
        >
    <Grid Margin="10 10 5 5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
            <TextBlock Text="Name :" Grid.Column="0"   />
            <TextBlock Text="Designer :" Grid.Column="0" Grid.Row="1"  />
        <TextBox Width="120" Grid.Column="1" VerticalAlignment="Top" Height="25" Grid.Row="0"  KeyDown="UIElement_OnKeyDown" GotFocus="UIElement_OnGotFocus" Name="TxtName" />
        <TextBox Width="120" Grid.Column="1" Grid.Row="1" Height="25"  KeyDown="UIElement_OnKeyDown" GotFocus="UIElement_OnGotFocus" VerticalAlignment="Top"  Name="TxtDesignerName" />
            <Button Grid.ColumnSpan="2" Grid.Row="2" Click="Button_Click_1" Height="23" IsDefault="True" HorizontalAlignment="Right"  Content="Save" Width="80"  Margin="8 10 8 2"/>
    </Grid>
</Window>
