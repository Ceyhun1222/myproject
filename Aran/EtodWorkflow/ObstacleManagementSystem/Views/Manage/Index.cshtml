@using ObstacleManagementSystem.Views.Manage
@using Microsoft.AspNetCore.Mvc.Localization
@using ObstacleManagementSystem.Extensions

@model ObstacleManagementSystem.ViewModels.Manage.IndexViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Profile"];
    ViewData.AddActivePage(ManageNavPages.Index);
}


<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            
            <div class="form-group">
                <label asp-for="MobileNumber" class="col-md-2 control-label"></label>

                <div class="col-md-10">
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" asp-for="MobileNumber" class="form-control" data-inputmask="&quot;mask&quot;: &quot;(999) 999-99-99&quot;" data-mask="">
                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
