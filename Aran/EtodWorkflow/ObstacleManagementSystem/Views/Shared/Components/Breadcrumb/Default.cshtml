@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<Message>


<ol class="breadcrumb">
    <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i>@Localizer["Main page"]</a></li>

    @foreach (var message in Model)
    {
        if (Model.Last() == message)
        {
            <li class="active">@message.DisplayName</li>
        }
        else
        {
            <li><a href="@message.URLPath"> @message.DisplayName</a></li>
        }
    }
</ol>