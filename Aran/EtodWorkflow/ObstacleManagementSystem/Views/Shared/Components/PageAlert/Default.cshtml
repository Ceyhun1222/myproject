@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model IEnumerable<Message>

@foreach (var item in Model)
{
    if (item.Type == "error")
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-ban"></i> @Localizer["Error"]!</b> @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "info")
    {
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-info"></i> @Localizer["Info"]!</b> @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "warning")
    {
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-warning"></i> @Localizer["Warning"]!</b> @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "success")
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-check"></i> @Localizer["Success"]!</b> @Html.Raw(@item.ShortDesc)
        </div>
    }
}

