<Window x:Class="DmsControll.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dmsControll="clr-namespace:DmsControll"
        Title="Test" Height="300" Width="330">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            </Grid.RowDefinitions>
        <dmsControll:DmsControl Width="300" Accuracy="{Binding Accuracy}" 
                                Latitude="{Binding LatitudeProp}" 
                                Longtitude="{Binding LongtitudeProp}"/>
        <TextBox Text="{Binding TxtAydin}" Grid.Row="1" Width="90" Height="30"/>
    </Grid>
</Window>
