<UserControl x:Class="Aran.Temporality.CommonUtil.View.BlockerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:View="clr-namespace:Aran.Temporality.CommonUtil.View"
             Visibility="{Binding Path=Visibility, FallbackValue=Hidden}">
    <UserControl.Resources>

        <Style x:Key="{x:Type View:BlockerControl}" TargetType="{x:Type View:BlockerControl}" >
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type View:BlockerControl}">
                        <Grid Background="#C0F0F0F0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <View:LoadingAnimation  />
                            </WrapPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
   
</UserControl>
