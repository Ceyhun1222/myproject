            </TabItem>
            
        </TabControl>
        <View1:BlockerControl 
            DataContext="{Binding Path=BlockerModel}" 
            Grid.Row="0" Grid.Column="0" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" Grid.ColumnSpan="2" Margin="0,0,0.4,-0.4"/>
    </Grid>


</UserControl>