<UserControl x:Class="PVT.UI.View.UserControls.ColorOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVT.UI.View.UserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converters="clr-namespace:PVT.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <converters:PercentageConverter x:Key="PercentageConverter" />
    </UserControl.Resources>
    <StackPanel>
        <local:ColorOptionGroupBox Header="Common View" DataContext="{Binding Options.CommonViewColorOptions}"/>
        <local:ColorOptionGroupBox Header="Detailed View" DataContext="{Binding Options.DetailedViewColorOptions}"/>
    </StackPanel>
</UserControl>
