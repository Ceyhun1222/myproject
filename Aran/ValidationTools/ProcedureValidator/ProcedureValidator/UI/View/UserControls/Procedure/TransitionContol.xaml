<UserControl x:Class="PVT.UI.View.UserControls.TransitionContol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PVT.UI.View.UserControls"
             xmlns:ViewModels="clr-namespace:PVT.UI.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type ViewModels:LegsViewModel}">
            <local:LegsContol/>
        </DataTemplate>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <StackPanel>
        <GroupBox Header="{Binding Transition.Type}">
            <StackPanel >
                <ItemsControl ItemsSource="{Binding LegsViewModels}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
